{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "react", "react-dom"],
    "plugins": [{ "name": "next" }],
    "esModuleInterop": true,

    // ⭐ Custom type declarations (IMPORTANT)
    "typeRoots": ["./types", "./node_modules/@types"],

    // ⭐ Path alias support
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],

  "exclude": ["node_modules"]
}
